
@{
    ViewData["Title"] = "ThemHocPhan";
    Layout = "~/Views/Shared/_DangNhapLayout.cshtml";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a href="index.html" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">
                                <img src="~/template/assets/img/icons/logo.png" style="width: 40px; height: 40px;" />
                            </span>
                            <span class=" demo menu-text fw-bolder ms-2">ĐHCT</span>
                        </a>
                    </div>
                    <!-- /Logo -->

                    <form id="formAuthentication" class="mb-3">
                        <div class="mb-3">
                            <label for="email" class="form-label">Tài khoản</label>
                            <input type="text"
                                   class="form-control"
                                   id="taiKhoan"
                                   name="email-username"
                                   placeholder="Nhập mã số tài khoản..."
                                   autofocus />
                        </div>
                        <div class="mb-3 form-password-toggle">
                            <div class="d-flex justify-content-between">
                                <label class="form-label" for="password">Mật khẩu</label>
                            </div>
                            <div class="input-group input-group-merge">
                                <input type="password"
                                       id="matKhau"
                                       class="form-control"
                                       name="password"
                                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                       aria-describedby="password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary d-grid w-100" onclick="KiemTra()">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>
<button id="buttonError"
        style="display: none"
        data-bs-toggle="modal"
        data-bs-target="#modalCenter2">
</button>
<!-- error modal -->
<div class="modal fade" id="modalCenter2" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Lỗi !</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3>Sai tài khoản hoặc mật khẩu</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" id="modalDong">
                    Đóng
                </button>
            </div>
        </div>
    </div>
</div>
<!-- error modal -->

<script src="~/js/DangNhap.js"></script>