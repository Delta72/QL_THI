@model DanhSachThongBao
@{
    Layout = null;
}


<div class="table-responsive text-nowrap">
    <table class="table table-hover" id="DSTB">
        <thead>
            <tr>
                <th onclick="sortTable(0, 'DSTB')">Tựa đề</th>
                <th onclick="sortTable(1, 'DSTB')" style="text-align: center;">Ngày</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var i in Model.DS)
            {
                <tr>
                    <td style="width: 60vw">
                        <i class="fab fa-angular fa-lg text-danger me-3"></i>
                        <strong>@i.tuaDe</strong>
                    </td>
                    <td style="text-align: center;">@i.thoiGian</td>
                    <td>
                        <div class="dropdown" style="z-index: 1 !important">
                            <button type="button"
                                    class="btn p-0 dropdown-toggle hide-arrow"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalScrollable"
                                    onclick="HienNoiDung('@i.id')">
                                <i class="bx bx-detail"></i>
                            </button>
                        </div>

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div class="card-header" style="text-align: center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item prev">
                <a class="page-link" href="#" onclick="TimKiemTB('@Model.str', 1)">
                    <i class="tf-icon bx bx-chevrons-left"></i>
                </a>
            </li>
            @for (var i = 1; i <= Model.soTrang; i++)
            {
                if (i == Model.trangHienTai)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#" onclick="TimKiemTB('@Model.str', '@i')">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="#" onclick="TimKiemTB('@Model.str', '@i')">@i</a>
                    </li>
                }
            }
            <li class="page-item next">
                <a class="page-link" href="#" onclick="TimKiemTB('@Model.str', '@Model.soTrang')">
                    <i class="tf-icon bx bx-chevrons-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>
