@model modelNhom 
@{
    ViewData["Title"] = "ChiTietNhom";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="col-sm-2" style="text-align: right">
    <button onclick="DownloadZip('@Model.zip')"
            class="btn btn-primary">
        <i class="bx bx-search"></i>
    </button>
</div>

<script>
    function DownloadZip(link) {
        window.location.href = 'Download/DownloadZip?link=' + link
    }
</script>