@model DanhSachNhom
@{
    ViewData["Title"] = "DanhSachNhomHocPhan";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="" style="margin-bottom: 10px;">
    <div class="card">
        <h5 class="card-header">@Model.hocPhan</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th style="text-align: center;">Phụ trách</th>
                        <th style="text-align: center;">Hình thức thi</th>
                        <th style="text-align: center;">Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var i in Model.danhSachNhom)
                    {
                    <tr>
                        <td style=""><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@i.stt</strong></td>
                        <td style="text-align: center;">
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center" style="text-align: center !important; justify-content: center">
                                <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="@i.taiKhoan.hoTen" style="text-align: center !important">
                                    <img src="@i.taiKhoan.avatar" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td style="text-align: center;">
                            @i.hinhThuc.tenHinhThuc
                        </td>
                        <td style="text-align: center;">
                            @if (i.daNop == true)
                            {
                                <span class="badge bg-label-primary me-1">Đã nộp</span>
                            }
                            else
                            {
                                <span class="badge bg-label-warning me-1">Chưa nộp</span>
                            }
                        </td>
                        <td>
                            <div class="dropdown" style="z-index: 1 !important">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow">
                                    <i class="bx bx-detail"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/js/DanhSachNhomHocPhan.js"></script>